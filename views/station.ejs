<%- include('partials/header') -%>
<div class="container">
	<div class="row justify-content-center mt-5">
		<div class="col-6">
			<h2><%= station.name %></h2>
			<div class="imageContainer">
				<img id="rockets" class="" src="<%= station.image_url%>" />
			</div>
		</div>
		<div class="col-3 mt-5">
			<p>Status: <%= station.status.name%></p>
			<time class="published info" datetime="2015-11-01">
				Founded: <%= moment(station.founded).format('Do MMMM, YYYY')%>
			</time>
			<p>Height: <%= station.height%> meters</p>
			<p>Width: <%= station.width%> meters</p>
			<p>Mass: <%= station.mass%> tons</p>
			<p><%= station.description%></p>
		</div>

		<div class="col-6 mt-5">
			<a class="btn btn-primary" href="/">Return to Feed</a>
		</div>
	</div>
</div>

<%- include('partials/footer') -%>
